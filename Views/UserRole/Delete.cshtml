@model Sips.SipsModels.ViewModels.UserRoleVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string message = ViewBag.ErrorMessage;
}

<h1>Delete</h1>
@message

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="UserRole" method="post">
        <input asp-for=@Model.RoleName type="hidden" value=@Model.RoleName />
        <input asp-for=@Model.Email type="hidden" value=@Model.Email />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>