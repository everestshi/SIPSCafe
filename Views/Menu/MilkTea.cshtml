@model Sips.SipsModels.MilkTeaVM

<div class="tea-container">
    <h1>@Model.title</h1>
</div>


<div class="tea-list">
    @foreach (var tea in Model.Items)
    {
        <div class="tea-item">
            <img src="~/images/boba-02.png" alt="@tea.Name" class="img-fluid">
            <div class="tea-copy">
            <h3>@tea.Name</h3>

            <p>Description: @tea.Description</p>

            <p>Price: $@tea.BasePrice.ToString()</p>
            </div>
            <div class="tea-btns">
            <button>Add to Cart</button>
            <button>Customize</button>
            </div>
        </div>
    }
</div>
