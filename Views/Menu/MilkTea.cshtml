@model Sips.Models.MilkTeaViewModel

<h1>@Model.title</h1>

<div class="milk-tea-list">
    @foreach (var tea in Model.Items)
    {
        <div class="milk-tea-item">
            <h2>@tea.Name</h2>
            <img src="" alt="@tea.Name" class="img-fluid">
            <p>Description: @tea.Description</p>
            <p>Price: $@tea.BasePrice.ToString()</p>
@*             <button>Add to Cart</button>
            <button>Customize</button> *@
        </div>
    }
</div>
<img src="~/images/boba-02.png" />